SQL> DECLARE
  2      CURSOR emp_cur IS
  3          SELECT empid, empname, joining_date, relieving_date
  4          FROM Employee
  5          WHERE relieving_date IS NOT NULL;
  6
  7      v_id Employee.empid%TYPE;
  8      v_name Employee.empname%TYPE;
  9      v_join Employee.joining_date%TYPE;
 10      v_rel Employee.relieving_date%TYPE;
 11      v_years NUMBER;
 12  BEGIN
 13      OPEN emp_cur;
 14      LOOP
 15          FETCH emp_cur INTO v_id, v_name, v_join, v_rel;
 16          EXIT WHEN emp_cur%NOTFOUND;
 17
 18          v_years := TRUNC(MONTHS_BETWEEN(v_rel, v_join) / 12);
 19
 20          DBMS_OUTPUT.PUT_LINE('EmpID: ' || v_id || ' Name: ' || v_name || ' Service: ' || v_years || ' years');
 21      END LOOP;
 22      CLOSE emp_cur;
 23  END;
 24  /
EmpID: 101 Name: Anita Service: 10 years
EmpID: 102 Name: Binu Service: 6 years

PL/SQL procedure successfully completed.

SQL> DECLARE
  2      CURSOR pension_cur IS
  3          SELECT empid, empname, joining_date, relieving_date, salary
  4          FROM Employee
  5          WHERE relieving_date IS NOT NULL;
  6
  7      v_id Employee.empid%TYPE;
  8      v_name Employee.empname%TYPE;
  9      v_join Employee.joining_date%TYPE;
 10      v_rel Employee.relieving_date%TYPE;
 11      v_sal Employee.salary%TYPE;
 12      v_years NUMBER;
 13      v_pension NUMBER;
 14  BEGIN
 15      OPEN pension_cur;
 16      LOOP
 17          FETCH pension_cur INTO v_id, v_name, v_join, v_rel, v_sal;
 18          EXIT WHEN pension_cur%NOTFOUND;
 19
 20          v_years := TRUNC(MONTHS_BETWEEN(v_rel, v_join) / 12);
 21          v_pension := (v_years * v_sal) / 100;
 22
 23          DBMS_OUTPUT.PUT_LINE('EmpID: ' || v_id || ' Name: ' || v_name || ' Pension: ' || v_pension);
 24      END LOOP;
 25      CLOSE pension_cur;
 26  END;
 27  /
EmpID: 101 Name: Anita Pension: 4000
EmpID: 102 Name: Binu Pension: 2100
